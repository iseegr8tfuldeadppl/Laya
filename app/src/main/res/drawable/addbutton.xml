<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item
        android:bottom="-2dp"
        android:right="-2dp"
        android:top="-2dp">
        <shape android:shape="rectangle" >
            <solid android:color="#000000" />

            <stroke
                android:width="2dp"
                android:color="#C8f5c970" />
        </shape>
    </item>

    <item
        android:left="-4dp"
        android:right="-4dp"
        android:top="-4dp">

        <shape android:shape="rectangle" >
            <solid android:color="#000000" />

            <stroke
                android:width="4dp"
                android:color="#27507b" />
        </shape>
    </item>
</layer-list>