<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".laya.MainActivity">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_weight=".33"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/english"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="#f0b63f"
                android:onClick="englishClicked"
                android:text="English"
                android:textAllCaps="false"
                android:textColor="#27507b"
                android:textSize="25sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_weight=".33"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/french"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="#27507b"
                android:onClick="frenchClicked"
                android:text="Francais"
                android:textAllCaps="false"
                android:textColor="#f0b63f"
                android:textSize="25sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_weight=".33"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/arabic"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="#f0b63f"
                android:onClick="arabicClicked"
                android:text="العربية"
                android:textAllCaps="false"
                android:textColor="#27507b"
                android:textSize="25sp" />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>